<div class="container">
    <div class="wrapper">
        <div class="ticket">
            <h1>hello world</h1>
            <div class="bg"></div>
        </div>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
    }

    .ticket {
        box-shadow: 0 0 20px rgba(0, 0, 0, .3);
        border: 2px solid rgba(0, 153, 255, 0.435);
        width: 480px;
        height: 300px;
        background: #fff;
        aspect-ratio: 18/9;
        border-radius: 6px;
        position: relative;
    }

    .bg {
        top: 0;
        background: rgba(0, 0, 0, .1);
        position: absolute;
        inset: 0;
        filter: blur(20px);
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    h1 {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: #000;
        padding: 20px;
    }

    body {
        margin: 0;
        background: #222;
        display: grid;
        place-items: center;
        height: 100vh;
    }

    .container {
        display: grid;
    }

    .wrapper {
        perspective: 300px;
    }
</style>

